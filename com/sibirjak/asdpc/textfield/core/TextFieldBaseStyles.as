package com.sibirjak.asdpc.textfield.core {

	/**
	 * TextFieldBase style properties.
	 * 
	 * @author jes 04.11.2009
	 */
	public class TextFieldBaseStyles {

		/**
		 * Style property defining the selectability.
		 */
		public const selectable: String = "textFieldBase_selectable";

		/**
		 * Style property defining the text color.
		 */
		public const color: String = "textFieldBase_color";

		/**
		 * Style property defining that an embed font is to use.
		 */
		public const embedFont : String = "textFieldBase_embedFont";

		/**
		 * Style property defining the anti alias type.
		 */
		public const antiAliasType : String = "textFieldBase_antiAliasType";

		/**
		 * Style property defining the text font.
		 */
		public const font: String = "textFieldBase_font";

		/**
		 * Style property defining the text size.
		 */
		public const size: String = "textFieldBase_size";

		/**
		 * Style property defining the text font weight.
		 */
		public const bold: String = "textFieldBase_bold";

		/**
		 * Style property defining underlined text.
		 */
		public const underline: String = "textFieldBase_underline";

		/**
		 * Style property defining the letter spacing.
		 */
		public const letterSpacing : String = "textFieldBase_letterSpacing";

		/**
		 * Style property defining the background visibility.
		 */
		public const background: String = "textFieldBase_background";

		/**
		 * Style property defining the background color.
		 */
		public const backgroundColor: String = "textFieldBase_backgroundColor";

		/**
		 * Style property defining the border visibility.
		 */
		public const border: String = "textFieldBase_border";

		/**
		 * Style property defining the border light color.
		 */
		public const borderLightColor: String = "textFieldBase_borderLightColor";

		/**
		 * Style property defining the border dark color.
		 */
		public const borderDarkColor: String = "textFieldBase_borderDarkColor";

	}
}
